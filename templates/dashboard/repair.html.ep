% title '수선';
% layout 'default', jses => [
%   '/assets/components/jquery-timeago/jquery.timeago.js',
%   '/assets/components/jquery-timeago/locales/jquery.timeago.ko.js',
%   '/assets/components/reconnectingWebsocket/reconnecting-websocket.js',
%   '/assets/dist/js/repair.min.js'
% ];

<div id="event">
  <audio src="/assets/audio/alarm.ogg">
    <p>Your browser does not support the audio element.</p>
  </audio>
</div>

<div id="dashboard-repair">
  %= include 'partials/waiting', waiting => $waiting;
  <ul>
    % while (my $order = $orders->next) {
      % my $user      = $order->user;
      % my $user_info = $user->user_info;
      % my $gender    = $user_info->gender;
      % my $comment   = $user_info->comment;
      <li class="repair" data-order-id="<%= $order->id %>">
        <h2>
          <span class="fawrapper<%= $done->{$order->id} ? ' text-success' : '' %>">
            <i class="fa fa-check-square repair-done"></i>
          </span>
          <i class="fa fa-<%= $gender%> <%= $gender %>"></i> <%= $user->name %>
          <small>
            <abbr class="timeago" 
                  title="<%= $order->update_date->ymd %>T<%= $order->update_date->hms %>">
              <%= $order->update_date %>
            </abbr>
          </small>
        </h2>
        % if ($order->pants) {
          <code><%= $order->pants %>cm</code> 
        % }
        <span><%= $comment || ' ' %></span>
        <small><%= $user_info->purpose || ' ' %></small>
        <small><%= $user_info->purpose2 || ' ' %></small>
      </li>
    % }
  </ul>
</div>
