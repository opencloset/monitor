root = true

[*]
charset = utf-8
end_of_line = lf            # Unix-style newlines
insert_final_newline = true # newline ending every file
indent_style = space
indent_size = 4

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.coffee]
indent_size = 2
